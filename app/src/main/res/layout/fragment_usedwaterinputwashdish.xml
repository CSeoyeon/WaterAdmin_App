<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/usedWaterWashDish_tv_title"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:text="설거지 유형"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/usedWaterWashDish_radigG_modeChoice"
        android:layout_width="211dp"
        android:layout_height="220dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/usedWaterWashDish_tv_title"
        tools:layout_editor_absoluteX="44dp">

        <TextView
            android:id="@+id/usedWaterWashDish_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설거지 방법 "
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/usedWaterWashDish_radioBt_handWashDish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="손 설거지" />

        <RadioButton
            android:id="@+id/usedWaterWashDish_radioBt_WashMachine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식기세척기 사용(5~12인용)" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>