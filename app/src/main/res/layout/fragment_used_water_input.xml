<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usedWaterInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inputPage.WaterUseFragment">


    <TextView
        android:id="@+id/useWaterInput_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="물 사용량 입력"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/useWaterInput_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="1회 기준"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/useWaterInput_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_title" />

    <TextView
        android:id="@+id/useWaterInput_tv_amountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="사용량 (L)"
        app:layout_constraintStart_toStartOf="@+id/userWaterInput_tv_typeLabel"
        app:layout_constraintTop_toBottomOf="@+id/userWaterInput_tv_typeLabel" />

    <EditText
        android:id="@+id/useWaterInput_et_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/useWaterInput_tv_amountLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/useWaterInput_tv_amountLabel"
        app:layout_constraintTop_toTopOf="@+id/useWaterInput_tv_amountLabel"
        app:layout_constraintVertical_bias="0.153" />

    <TextView
        android:id="@+id/userWaterInput_tv_typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="사용종류"
        app:layout_constraintStart_toStartOf="@+id/useWaterInput_tv_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_subtitle" />

    <Spinner
        android:id="@+id/useWaterInput_sp_useType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/userWaterInput_tv_typeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/userWaterInput_tv_typeLabel"
        app:layout_constraintTop_toTopOf="@+id/userWaterInput_tv_typeLabel"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/useWaterInput_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="입력완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>