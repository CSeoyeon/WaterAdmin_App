<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usedWaterInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inputPage.fragment.WaterUseInputFragment">


    <FrameLayout
        android:id="@+id/usedwaterinput_frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_sp_useType">

    </FrameLayout>

    <TextView
        android:id="@+id/useWaterInput_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물 사용량 입력"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <Spinner
        android:id="@+id/useWaterInput_sp_useType"
        android:layout_width="280dp"
        android:layout_height="35dp"

        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/userWaterInput_tv_typeLabel"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_subtitle" />

    <Button
        android:id="@+id/useWaterInput_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="입력완료"
        app:layout_constraintEnd_toEndOf="@+id/useWaterInput_sp_useType"
        app:layout_constraintTop_toBottomOf="@+id/usedwaterinput_frameLayout" />

    <TextView
        android:id="@+id/useWaterInput_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1회 기준"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/useWaterInput_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_title" />

    <TextView
        android:id="@+id/userWaterInput_tv_typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="사용종류"
        app:layout_constraintStart_toStartOf="@+id/useWaterInput_tv_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_subtitle" />


</androidx.constraintlayout.widget.ConstraintLayout>