<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usedWaterInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inputPage.WaterUseInputFragment">


    <TextView
        android:id="@+id/useWaterInput_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="물 사용량 입력"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/userWaterInput_tv_typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="사용종류"
        app:layout_constraintEnd_toStartOf="@+id/useWaterInput_sp_useType"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_subtitle" />

    <Spinner
        android:id="@+id/useWaterInput_sp_useType"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginEnd="28dp"

        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/usedwaterinput_frameLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/useWaterInput_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1회 기준"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/useWaterInput_tv_title"
        tools:layout_editor_absoluteX="28dp" />

    <Button
        android:id="@+id/useWaterInput_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:text="입력완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <FrameLayout
        android:id="@+id/usedwaterinput_frameLayout"
        android:layout_width="409dp"
        android:layout_height="367dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/useWaterInput_bt_save"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>