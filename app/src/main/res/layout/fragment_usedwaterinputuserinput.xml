<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_usedwaterInputUserInput"
    tools:context="ui.inputPage.UsedWaterInputUserInputFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/usedWaterInputUserInput_tv_title"

        android:layout_width="205dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:text="사용자 직접 입력"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/usedWaterInputUserInput_tv_subtitle"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/usedWaterInputUserInput_sp_literChoice"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/usedWaterInputUserInput_et_usedWater"
        app:layout_constraintTop_toBottomOf="@+id/usedWaterInputUserInput_tv_subtitle" />

    <Button
        android:id="@+id/usedWaterInputUserInput_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usedWaterInputUserInput_sp_literChoice" />

    <TextView
        android:id="@+id/usedWaterInputUserInput_tv_subtitle"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="리터(L) 기준 "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/usedWaterInputUserInput_et_usedWater"
        app:layout_constraintTop_toBottomOf="@+id/usedWaterInputUserInput_tv_title" />

    <EditText
        android:id="@+id/usedWaterInputUserInput_et_usedWater"
        android:layout_width="0dp"
        android:layout_height="43dp"

        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/usedWaterInputUserInput_bt_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usedWaterInputUserInput_tv_subtitle"
        app:layout_constraintVertical_bias="0.105" />

</androidx.constraintlayout.widget.ConstraintLayout>