<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/usedWaterShower_tv_title"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="샤워"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/usedWaterShower_tv_usedCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/usedWaterShower_tv_usedCount"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:text="사용 시간"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="56dp" />

    <EditText
        android:id="@+id/usedWaterShower_et_usedCount"
        android:layout_width="0dp"
        android:layout_height="43dp"

        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/usedWaterShower_tv_usedCount"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/usedWaterShower_tv_CountNumber"
        android:layout_width="35dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:text="분"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/usedWaterShower_et_usedCount"
        tools:layout_editor_absoluteY="56dp" />


</androidx.constraintlayout.widget.ConstraintLayout>