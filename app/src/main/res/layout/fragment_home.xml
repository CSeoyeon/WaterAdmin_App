<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <TextView
        android:id="@+id/waterUseTX"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:layout_marginEnd="32dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/waterTaxTX"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="86dp"
        android:layout_height="43dp"
        android:layout_marginBottom="292dp"
        android:text="당일 수도세:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/homeAddBtn"
        app:layout_constraintEnd_toStartOf="@+id/waterTaxTX"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/waterTaxTX"
        android:layout_width="164dp"
        android:layout_height="46dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="288dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/homeAddBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:text="수도 당일 사용량:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/waterUseTX"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/homeAddBtn"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:text="추가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>